@using Northwind.EntityModels
@model Northwind.EntityModels.Category
@{
    ViewData["Title"] = "Category Detail - " + Model.CategoryId;
}
<html lang="en">
<h2>Category details</h2>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a>
        <li class="breadcrumb-item active" aria-current="page">Categories</li>
    </ol>
</nav>


<div class="card" style="width: 18rem;">
        <img class="card-img-top" src="~/images/category@(Model.CategoryId).jpeg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.CategoryName</h5>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Amount of products in this category:
                <span class="badge badge-primary badge-pill">@Model.Products.Count</span>
            </li>
            <p class="card-text"><small class="text-muted">@Model.Description</small></p>
        </div>
    </div>
   


<hr/>
<div class="container-fluid">
    <div class="row">
@foreach (var product in Model.Products) { 
  
    <div class="card text-center col-md-4  ">
        <a asp-controller="Home" asp-action="ProductDetail"
           asp-route-id="@product.ProductId" class="btn btn-outline-primary">
        <div class="card-body">
            <h5 class="card-title">@product.ProductName</h5>
            <p class="card-text">Pris: @product.UnitPrice.Value.ToString("C")</p>
            <p class="card-text"><small class="text-muted">Supplier: @product.Supplier.CompanyName</small></p>

        </div>
        </a>
    </div>
    
}
    </div>
</div>

